<section id="slider" class="slider-element bg-color" style="height: auto; padding: 60px 0; background: url('Content/themeCss/images/bg-2.png') no-repeat center center / 100% 100%;">

    <div class="container mt-4" style="z-index: 2">
        <div class="center">
            <h1 style="font-size:35px;color:#fff;">@Html.T("HOME_PAGE_INTRO")</h1>
            <h2 style="font-size:20px;" class="text-white h2 font-weight-semibold mb-2">@Html.T("HOME_PAGE_TITLE")</h2>
            <p class="text-white">@Html.T("HOME_PAGE_SUBTITLE")</p>

        </div>
        <div class="row topmargin justify-content-center">
            <div class="col-lg-7">
                <ul class="nav nav-tabs nav-justified flex-column border-bottom-0 flex-md-row bg-color mt-4" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link py-3 active" id="others-moving-tab" data-toggle="tab" href="#others-moving" role="tab"
                           aria-controls="others-moving" style="font-weight:bold;font-size:20px;" aria-selected="false">@Html.T("HOME_PAGE_GET_INFORMATION_TITLE")</a>
                    </li>
                </ul>

                <div class="tab-content rounded-bottom shadow bg-white py-4 px-5">
                    <!-- Get Offer ============================================= -->

                    <div class="tab-pane fade show active" id="others-moving" role="tabpanel" aria-labelledby="others-moving-tab">
                        <p class="mb-4">
                            @Html.T("HOME_PAGE_GET_AN_OFFER_EXPLANATION")
                        </p>
                        <div class="form-widget">
                            <div class="form-result"></div>
                            <form class="row others-moving-form position-relative mb-0">
                                <div class="form-process">
                                    <div class="css3-spinner">
                                        <div class="css3-spinner-scaler"></div>
                                    </div>
                                </div>
                                <div class="col-sm-12 input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-transparent"><i class="icon-building2"></i></span>
                                    </div>
                                    <input type="text" name="others-moving-form-name" id="getOffer_CompanyName"
                                           class="form-control required" value="" placeholder="@Html.T("HOME_PAGE_GET_AN_OFFER_COMPANY_NAME")" />
                                </div>




                                <div class="col-sm-12 input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-transparent"><i class="icon-line2-envelope"></i></span>
                                    </div>
                                    <input type="email" name="others-moving-form-email" id="getOffer_EMail"
                                           class="form-control required" value="" placeholder="@Html.T("HOME_PAGE_GET_AN_OFFER_E_MAIL")">
                                </div>

                                

                                <div class="col-sm-12 input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-transparent"><i class="icon-line2-info"></i></span>
                                    </div>
                                    <textarea id="getOffer_Message" style="height:60px;" class="form-control required" placeholder="@Html.T("HOME_PAGE_GET_AN_OFFER_MESSAGE_TEXT")"></textarea>

                                </div>

                                <div class="col-12 d-none">
                                    <input type="text" id="others-moving-form-botcheck" name="others-moving-form-botcheck" value="" />
                                </div>

                                <div class="col-12">
                                    <button onclick="PrepareDataForSend(0)" name="others-moving-form-submit"
                                            class="btn bg-color text-white font-weight-medium btn-block py-2 mt-2">
                                        @Html.T("HOME_PAGE_GET_AN_OFFER_SEND_BUTTON_TEXT")
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>


                </div>
