    <script type="text/javascript">
        function PrepareDataForSend(id) {
            console.log(id);
            var Message = {};
            // Eğer id = 0 ise teklif, id = 1 ise bilgi talebi isteniyor.
            if (id == 0) {
                Message.SUBJECT =               "GET_OFFER"; //TODO
                Message.COMPANY_NAME =          $("#getOffer_CompanyName").val();
                Message.E_MAIL =                $("#getOffer_EMail").val();
                //Message.PHONE_NUMBER =          $("#getOffer_Phone").val();
                //Message.FARM_TYPE =             $("#getOffer_FarmType").val();
                //Message.COUNTRY =               $("#getOffer_Country").val();
                //Message.CITY = $("#getOffer_City").val();
                Message.MESSAGE_TEXT = $("#getOffer_Message").val();

                console.log(Message);
                if (Message.MESSAGE_TEXT!="" && Message.SUBJECT != "" && Message.COMPANY_NAME != "" && Message.E_MAIL != "") {
                    SendMessage(Message);
                }
            }
            else {
                Message.SUBJECT =               "INFO"; //TODO
                Message.COMPANY_NAME =          $("#getInfo_CompanyName").val();
                Message.E_MAIL =                $("#getInfo_EMail").val();
             /*   Message.PHONE_NUMBER = $("#getInfo_PhoneNumber").val();*/
                Message.MESSAGE_TEXT = $("#getInfo_Message").val();


                console.log(Message);
                if (Message.MESSAGE_TEXT != "" && Message.SUBJECT != "" && Message.COMPANY_NAME  &&  Message.E_MAIL != "") {
                   SendMessage(Message);
                }
            }
        }
        function ClearValues() {
            $('.form-process').removeAttr('style')
            $("#getInfo_CompanyName").val("");
            //$("#getInfo_EMail").val("");
            //$("#getInfo_PhoneNumber").val("");
            $("#getInfo_Message").val("");
            $("#getOffer_CompanyName").val("");
            $("#getOffer_EMail").val("");
            //$("#getOffer_Phone").val("");
            //$("#getOffer_AppointmentTime").val("");
            //$("#getOffer_FarmType").val("");
            //$("#getOffer_FarmCapacity").val("");
            //$("#getOffer_NumberOfEmployees").val("");
            //$("#getOffer_Country").val("");
            //$("#getOffer_City").val("");
            $("#getOffer_Message").val("");

        }
        function SendMessage(Message) {
            $.ajax({
                    url: "@Url.Action("SendMessage", "Home")",
                    type: "POST",
                    data: JSON.stringify(Message),
                    dataType: "JSON",
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {  //TODO: Dönen response değerleri kontrol edilecek.
                        console.log(response);
                        if (response.LANGUAGE_CODE == "MESSAGE_SENT_SUCCESS") {
                            Swal.fire({
                                icon: 'success',
                                text: response.MESSAGE,

                            })
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                text: response.MESSAGE
                            })
                        }
                        ClearValues();
                    },
                    error: function (response) {
                        Swal.fire({
                            icon: 'error',
                            text: response.MESSAGE
                        })
                        ClearValues();
                    }
            });

        }

    </script>



