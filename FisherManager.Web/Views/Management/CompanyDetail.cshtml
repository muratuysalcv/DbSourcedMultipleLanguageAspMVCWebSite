}
@{
    var CompanyId = ViewBag.CompanyId;
    ViewBag.Title = "CompanyDetail";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<div class="layout-px-spacing">

    <div class="row layout-spacing">

        <!-- Content -->
